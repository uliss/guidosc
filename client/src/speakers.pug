doctype html
// htmllint indent-width=2 line-end-style=false class-style=dash id-class-style=dash id-no-dup=true
- var HEADER = "Speakers test"
- var TITLE = "SuperCollider speakers test"
html(lang="en-US")
    head
        include pug/meta.pug
    body
        include pug/header.pug
        .container-fluid
            .row
                .col-md-offset-3.col-md-6#info
                    h1 Speakers test
                    //- button(type="button" class="btn" id="poll-info") OFF
                .col-md-3
            .row
                .col-xs-offset-1.col-md-offset-3.col-md-3
                    .checkbox
                        label
                            input(type="checkbox", id="speaker-circular")
                            | Circular motion

            .row
                .col-xs-offset-1.col-md-offset-3.col-md-1.col-xs-2
                    #speaker-front-l
                .col-xs-offset-4.col-md-offset-4.col-md-1.col-xs-2
                    #speaker-front-r
                .col-md-3.col-xs-1
            .row
                .col-md-12.speaker-space
            .row
                .col-xs-offset-1.col-md-offset-3.col-md-1.col-xs-2
                    #speaker-back-l
                .col-xs-offset-4.col-md-offset-4.col-md-1.col-xs-2
                    #speaker-back-r
                .col-md-3.col-xs-1

        include pug/footer.pug

        script $(document).ready(get_info());
